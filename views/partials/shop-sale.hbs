<div class="sale-container">
  <h1>Products On Sale</h1>
  <div class="sale-box">
    {{#each saleProducts}}
    <div class="product-card">
      <div class="image-card">
        <div class="zoom">
          <a href="/shop/product/{{this._id}}"><img src="{{this.imageUrl}}" alt="{{this.name}}"></a>
        </div>     
      </div>
      <div class="product-info">
        <p class="product-name">{{this.name}}</p>
        <p>Price:
          <span>${{this.price}}</span> $
          <span class="salePrice">{{this.salePrice}}</span></p>
        <p>Description: {{this.description}}</p>
        <a href="/shop/products/{{this.productType._id}}">{{this.productType.type}}</a>
      </div>
      <div class="product-forms">
        {{#if ../isAdmin }}
        <form action="/product/edit-product" method="POST">
          <input type="text" name="productId" value="{{this._id}}" hidden>
          <button>Edit</button>
        </form>
        <form action="/product/delete-product" method="POST">
          <input type="text" name="productId" value="{{this._id}}" hidden>
          <button>Delete</button>
        </form>
        {{else}}
         <form action="{{#if ../isSignedIn}}/cart{{else}}/log{{/if}}" method="{{#if ../isSignedIn}}POST{{else}}GET{{/if}}">
         <input type="text" name="productId" value="{{this._id}}" hidden>
          <button>Add to Cart</button>
        </form>
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</div>