{{!-- Main Shopping page --}} {{#if isOnMainShopPage}} {{#if productsOnSale}} {{!-- Products on sale --}}
<div class="sale-container">
  <h1>Products On Sale</h1>
  <div class="sale-box">
    {{#each saleProducts}}
    <div class="product-card">
      <div class="image-card">
        <img src="{{this.imageUrl}}" alt="{{this.name}}">
      </div>
      <div class="product-info">
        <p class="product-name">{{this.name}}</p>
        <p>Price:
          <span>${{this.price}}</span> $
          <span class="salePrice">{{this.salePrice}}</span></p>
        <p>Description: {{this.description}}</p>
        <a href="/shop/products/{{this.productType._id}}">{{this.productType.type}}</a>
      </div>
      <div class="product-forms">
        <form action="/cart" method="POST">
          <input type="text" name="productId" value="{{this._id}}" hidden>
          <button>Add to Cart</button>
        </form>
        <form action="/add-product/edit=true" method="POST">
          <input type="text" name="productId" value="{{this._id}}" hidden>
          <button>Edit</button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{else}} {{!-- No Products on sale --}}
<div class="no-sale-container">
  <h1>Choose the product type your looking for from the links above to find the best deals</h1>
</div>
